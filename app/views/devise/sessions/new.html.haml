.body
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .body__header
      .body__header__logo
        = image_tag "/assets/fmarket_logo_red.svg", alt: "ふりまの画像", size: "200x128"
    .body__main
      .body__main__top
        .body__main__top__text
          アカウントをお持ちでない方はこちら
        .body__main__top__btn
          = link_to "新規会員登録", new_registration_path(resource_name)
      .body__main__medium
        .body__main__medium__facebook
          = link_to user_facebook_omniauth_authorize_path do
            facebook
        .body__main__medium__google
          = link_to user_google_oauth2_omniauth_authorize_path do
            google
      .body__main__bottom
        .body__main__bottom__email
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", id: "email"
        .body__main__bottom__password
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", id: "password"
        .body__main__bottom__robot
          = flash[:recaptcha_error]
          = recaptcha_tags
        .body__main__bottom__login
          = f.submit "ログイン"
        .body__main__bottom__forget
          = link_to "パスワードをお忘れの方", new_password_path(resource_name)
    .body__footer
      .body__footer__top
        .body__footer__top__privacy
          プライバシーポリシー
        .body__footer__top__rule
          メルカリ利用規約
        .body__footer__top__trade
          特定商取引に関する表記
      .body__footer__bottom
        .body__footer__bottom__image
          = image_tag "/assets/logo_gray.svg", alt: "フリマの画像", size: "100x80"
        .body__footer__bottom__string
          © 2019 Fmarket

