.body
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .body__header
      .body__header__logo
        = link_to root_path do
          = image_tag asset_path("fmarket_logo_red.svg"), alt: "ふりまの画像", size: "200x128"
    .body__main
      .body__main__top
        .body__main__top__text
          アカウントをお持ちでない方はこちら
          = link_to new_registration_path(resource_name) do
            .body__main__top__btn
              新規会員登録
      .body__main__medium
        = link_to user_facebook_omniauth_authorize_path, method: :post do
          .body__main__medium__facebook
          -# .body__main__medium__facebook__icon
          -#   = icon 'fab', 'facebook-square'
          -# .body__main__medium__facebook__text
          -#   = link_to "Facebookでログイン", user_facebook_omniauth_authorize_path
        = link_to user_google_oauth2_omniauth_authorize_path, method: :post do
          .body__main__medium__google
          -# .body__main__medium__google__icon
            -# = icon 'fab', 'google'
          -# .body__main__medium__google__text
            -# = link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path 
      .body__main__bottom
        .body__main__bottom__email
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", id: "email"
        .body__main__bottom__password
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", id: "password"
        .body__main__bottom__robot
          -# = flash[:recaptcha_error]
          = recaptcha_tags
        .body__main__bottom__login
          = f.submit "ログイン"
        .body__main__bottom__forget
          = link_to "パスワードをお忘れの方", new_password_path(resource_name)
    .body__footer
      .body__footer__top
        .body__footer__top__privacy
          = link_to "プライバシーポリシー", "http://www.nogizaka46.com/" 
        .body__footer__top__rule
          = link_to "メルカリ利用規約", "https://www.hinatazaka46.com/s/official/?ima=0000"
        .body__footer__top__trade
          = link_to "特定商取引に関する表記", "https://www.keyakizaka46.com/s/k46o/?ima=0000" 
      .body__footer__bottom
        .body__footer__bottom__image
          = link_to root_path do
            = image_tag asset_path("logo_gray.svg"), alt: "フリマの画像", size: "100x80"
        .body__footer__bottom__string
          © 1973 FamilyMart