          %label カード番号
          %span 必須
        .tel__nickname--input
          %input{name: "card-number", type: "text", placeholder: "半角数字のみ"}/
        
      .tel__nickname
        .tel__nickname--label
          %label 有効期限
          %span 必須
        .tel__nickname--input
          %input{name: "card-deadline", type: "text", placeholder: "半角数字のみ"}/
        
      .tel__nickname
        .tel__nickname--label
          %label セキュリティコード
          %span 必須
