.tel-body
  = form_with model: @card, url: signups_path, method: :post, local: true do |f|
    .tel-body__inner
      .tel-body__inner--header
        支払い方法

      .tel-body__inner--body
        .tel__nickname
          .tel__nickname--label
            = f.label :number, "カード番号" 
            %span 必須
          .tel__nickname--input
            = f.text_field :number, placeholder: "半角数字のみ"
          
        .tel__nickname
          .tel__nickname--label
            = f.label :validity_year, "年" 
            %span 必須
          .tel__nickname--input
            = f.text_field :validity_year, placeholder: "半角数字のみ"

        .tel__nickname
          .tel__nickname--label
            = f.label :validity_month, "月"
            %span 必須
          .tel__nickname--input
            = f.text_field :validity_month, placeholder: "半角数字のみ"
          
        .tel__nickname
          .tel__nickname--label
            = f.label :security_cord, "セキュリティコード" 
            %span 必須
          .tel__nickname--input
            = f.text_field :security_cord, placeholder: "カード背面4桁もしくは3桁の番号"
          

        .user-info__next-btn
          = f.submit "次へ進む"

