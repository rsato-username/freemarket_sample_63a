.member-body
  .member-body__inner
    .member-body__inner--header
      発送元・お届け先住所入力
    .member-body__inner--body
      .member__nickname.member__form
        .member__nickname--label
          %label お名前
          %span 必須
        .member__nickname--input
          %input{name: "lastname", type: "text", placeholder: "田中"}/
        .member__nickname--input
          %input{name: "firstname", type: "text", placeholder: "花子"}/
      
      .member__nickname.member__form
        .member__nickname--label
          %label お名前カナ
          %span 必須
        .member__nickname--input
          %input{name: "lastnamek", type: "text", placeholder: "タナカ"}/
        .member__nickname--input
          %input{name: "firstnamek", type: "text", placeholder: "ハナコ"}/
      
      .member__nickname.member__form
        .member__nickname--label
          %label 郵便番号
          %span 必須
        .member__nickname--input
          %input{name: "postnumber", type: "text", placeholder: "例)123-4567"}/
      
      .member__nickname.member__form
        .member__nickname--label
          %label 都道府県
          %span 必須
        .member__nickname--input
          %input{name: "tdfk", type: "text", placeholder: "---"}/
      
      .member__nickname.member__form
        .member__nickname--label
          %label 市町村
          %span 必須
        .member__nickname--input
          %input{name: "scs", type: "text", placeholder: "例)横浜市緑区"}/
      
      .member__nickname.member__form
        .member__nickname--label
          %label 番地
          %span 必須
        .member__nickname--input
          %input{name: "banti", type: "text", placeholder: "例)青山1-1-1"}/
      
      .member__nickname.member__form
        .member__nickname--label
          %label 建物名
          %span.nin 任意
        .member__nickname--input
          %input{name: "password", type: "text", placeholder: "例)柳ビル103"}/
      
      .member__nickname.member__form
        .member__nickname--label
          %label 電話
          %span.nin 任意
        .member__nickname--input
          %input{name: "password", type: "text", placeholder: "09012345678"}/
      
        .user-info__next-btn
          %input(type="submit" value="次へ進む")/
          
