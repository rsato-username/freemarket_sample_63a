.member-body
  .member-body__inner
    = form_with model: @user_info, url: signups_path, method: :post, local: true do |f|
      .member-body__inner--header
        発送元・お届け先住所入力
      .member-body__inner--body
        .member__nickname.member__form
          .member__nickname--label
            %label お名前
            %span 必須
          .member__nickname--input
            = f.text_field :kan_familyname, placeholder: "例）山田"
          .member__nickname--input
            = f.text_field :kan_firstname, placeholder: "例）彩"
        
        .member__nickname.member__form
          .member__nickname--label
            %label お名前カナ
            %span 必須
          .member__nickname--input
            = f.text_field :kana_familyname, placeholder: "例）ヤマダ"
          .member__nickname--input
            = f.text_field :kana_firstname, placeholder: "例）アヤ"
        
        .member__nickname.member__form
          .member__nickname--label
            = f.label :post_number, "郵便番号"
            %span 必須
          .member__nickname--input
            = f.text_field :post_number, placeholder: "例)123-4567"
        
        .member__nickname.member__form
          .member__nickname--label
            = f.label :prefecture, "都道府県"
            %span 必須
          .member__nickname--input
            = f.select :prefecture, UserInfo.prefectures.keys, {prompt: "---"}
        
        .member__nickname.member__form
          .member__nickname--label
            = f.label :city, "市町村" 
            %span 必須
          .member__nickname--input
            = f.text_field :city, placeholder: "例)横浜市緑区"
        
        .member__nickname.member__form
          .member__nickname--label
            = f.label :address, "番地"
            %span 必須
          .member__nickname--input
            = f.text_field :address, placeholder: "例)青山1-1-1"
        
        .member__nickname.member__form
          .member__nickname--label
            = f.label :building, "建物名" 
            %span.nin 任意
          .member__nickname--input
            = f.text_field :building, placeholder: "例)柳ビル103"
        
        .member__nickname.member__form
          .member__nickname--label
            %label 電話
            %span.nin 任意
          .member__nickname--input
            %input{name: "password", type: "text", placeholder: "09012345678"}/
        
          .user-info__next-btn.aida
            = f.submit "次へ進む"
            
.member-footer
  .member-footer__kiyaku
