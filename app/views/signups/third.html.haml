.tel-body
  .tel-body__inner
    .tel-body__inner--header
      電話番号認証

    .tel-body__inner--body
      .tel__nickname
        .tel__nickname--label
          %label 認証番号
        .tel__nickname--input
          %input{name: "tel", type: "text", placeholder: "認証番号を入力"}/
        .tel__nickname--description
          %p SMSで届いた認証番号を入力してください
          
      .user-info__next-btn
        = link_to forth_signups_path do
          %input(type="submit" value="認証して完了")/

      .tel__how
        %a(href="#")
          電話番号を再度入力する

