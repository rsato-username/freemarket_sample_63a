= render 'shared/top_header'
.breadcrumbs-box
  - breadcrumb :card
  = breadcrumbs separator: " #{content_tag(:i, '', :class=>'fa fa-angle-double-right')} "
%main.container.clearfix
  = render 'shared/side_bar'
  .l-container
    .main__content
      %section.chapter__container
        %h2.chapter__head 支払い方法
        .payment__mainbox
          .payment__main
            .payment__list
              .payment__list__content
                %h3.sub__head クレジットカード一覧
            .card__payment__list
              .card__payment__listbox
                %form.card__payment__content
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg', size: "49x20"
                .card__list
                  .card__list__picture  
                .card__number 
                  = "**** **** **** " + @card_info.last4
                .expire__date 
                  - exp_month = @card_info.exp_month.to_s
                  - exp_year = @card_info.exp_year.to_s.slice(2,3)
                  = exp_month + " / " + exp_year
                = form_tag(delete_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
                  %input{ type: "hidden", name: "card_id", value: "" }
                  %button.delete__button 削除する
            .payment--description
              %a(href="")
                %span 支払い方法について
                %i.fa.fa-angle-double-right

= render 'shared/exhibit_btn'

= render 'shared/top_footer'